group { "e/modules/bodhi-shutdown/button";
	alias: "e/modules/syscon/button";
	images.image: "shutdown.png" COMP;
	images.image: "button-normal.png" COMP;
	images.image: "button-pressed.png" COMP;
	images.image: "button-prelight.png" COMP;
	min: 16 16; max: 128 128;
	parts{
		image { "base"; scale;
			description {
				state: "default" 0.0;
				fixed: 1 1;
				align: 0.5 0.5;
				min: 16 16;
				image.normal: "button-normal.png";
				image.border: 6 6 6 6;
			}
			description { state: "clicked" 0.0; inherit;
				image.normal: "button-pressed.png";
			}
			description { state: "over" 0.0; inherit;
				image.normal: "button-prelight.png";
			}
		}
		image { "icon"; nomouse;
			description { "default";
				align: 0.5 0.5;
				aspect: 1.0 1.0;
				aspect_preference: BOTH;
				rel1.offset: 2 3;
				rel1.to: "base";
				rel2.offset: -2 -3;
				rel2.to: "base";
				image.normal: "shutdown.png";
			}
		}
		rect { "event"; ignore: ON_HOLD;
			description { "default";
				color: 0 0 0 0;
				STAY_ON("base")
			}
			description { state: "disabled" 0.0; inherit; hid; }
		}
	}

	programs {
		program { "mouse_over";
			signal: "mouse,in";
			source: "event";
			action: STATE_SET "over" 0.0;
			target: "base";
		}
		program { "mouse_over_off";
		signal: "mouse,out";
		source: "event";
		action: STATE_SET "default" 0.0;
		target: "base";
		}
		program { "button_down";
				signal: "mouse,down,1";
				source: "event";
				action: STATE_SET "clicked" 0.0;
				target: "base";
		 }
		program { "button_up";
				signal: "mouse,up,1";
				source: "event";
				action: STATE_SET "default" 0.0;
				target: "base";
		 }
		program { "button_clicked";
				signal: "mouse,clicked,1";
				source: "event";
				action: SIGNAL_EMIT "e,action,shutdown,show" "";
		}
	}
}
